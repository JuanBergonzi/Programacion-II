@page "{id:int}"
@model WebApplication1.Pages.ViewCel.ModificarcelularesModel
@{
    ViewData["Title"] = "Modificar Celular";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Tu CSS personalizado -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <div class="container mt-4">
        <header class="text-center mb-4">
            <h2>Modificar Celular</h2>
        </header>

        <form method="post" class="formulario mx-auto" style="max-width: 500px;">
            <input type="hidden" asp-for="Celular.Id" />

            <div class="mb-3">
                <label asp-for="Celular.Marca" class="form-label">Marca</label>
                <input asp-for="Celular.Marca" class="form-control" />
                <span asp-validation-for="Celular.Marca" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Celular.Modelo" class="form-label">Modelo</label>
                <input asp-for="Celular.Modelo" class="form-control" />
                <span asp-validation-for="Celular.Modelo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Celular.Precio" class="form-label">Precio</label>
                <input asp-for="Celular.Precio" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Celular.Precio" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn guardar me-2">Guardar</button>
                <a asp-page="listaCelulares" class="btn cancelar">Cancelar</a>
            </div>
        </form>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
